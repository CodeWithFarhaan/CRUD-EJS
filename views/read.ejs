<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>CRUD</title>
</head>

<body>
    <div class="bg-zinc-900 w-full h-screen p-10 text-white">
        <a class="text-blue-500" href="/">Home ></a>
        <h1 class="text-2xl mt-10 tracking-tighter mb-3">All Users</h1>
        <div class="users flex flex-wrap gap-5">
            <% if(users.length> 0 ){ %>
                <% users.forEach(function(user) { %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="max-w-72 h-52 rounded-lg bg-red-500 overflow-hidden">
                            <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl tracking-tighter">
                            <%= user.name %>
                        </h3>
                        <h5 class="text-zinc-500">
                            <%= user.email %>
                        </h5>
                        <div class="flex gap-3 mt-10 flex-wrap">
                            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit</a>
                            <a class="text-red-500" href="/delete/<%= user._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% }else{ %>
                <h3 class="text-zinc-500">No Users Yet.</h3>
            <% } %>
        </div>
    </div>
</body>

</html>